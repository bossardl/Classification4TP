{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: main.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "--image_path", "train_img",
                "--label_path", "label_train.txt",
                "--batch_size", "128",
                "--lr", "0.001",
                "--epochs", "2",
                "--epoch_interval", "1",
                "--training_mode", "Val",
                "--method", "undersampling",
                "--undersampling", "1",
                "--oversampling", "0"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true
        }
    ]
}
